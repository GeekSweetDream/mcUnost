<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>


    <style name="InputText" parent="@style/TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/colorDarkGrey</item>
        <item name="colorControlActivated">@color/colorDarkGrey</item>
        <item name="colorControlHighlight">@color/colorDarkGrey</item>
    </style>

</resources>
