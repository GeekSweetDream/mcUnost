<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_orange_400">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_face_black_48dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="Преподавателей"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"/>
        <nl.dionsegijn.steppertouch.StepperTouch
            android:id="@+id/stepperTouchTeacher"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_face_black_48dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="Группа"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"/>

        <nl.dionsegijn.steppertouch.StepperTouch
            android:id="@+id/stepperTouchChildren"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity=""
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/quantity_accept"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        android:text="Принять"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/quantity_cancel"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:layout_marginTop="5dp"
        android:text="Отмена"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

</LinearLayout>