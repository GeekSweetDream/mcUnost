<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_white_1000"
              android:clickable="true"
              android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Преподавателей"
                android:textColor="@color/colorBlueToolbar"
                android:alpha="0.5"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <com.dreamsofpines.mcunost.ui.customView.SimpleCounter
                    android:id="@+id/stepperTouchTeacher"
                    android:layout_width="200dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Группа"
                android:textColor="@color/colorBlueToolbar"
                android:alpha="0.5"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dreamsofpines.mcunost.ui.customView.SimpleCounter
                    android:id="@+id/stepperTouchChildren"
                    android:layout_width="200dp"
                    android:layout_height="40dp"/>

                <!--<nl.dionsegijn.steppertouch.StepperTouch-->
                    <!--android:id="@+id/stepperTouchChildren"-->
                    <!--app:stepperBackgroundColor="@color/colorBlueToolbar"-->
                    <!--android:layout_width="120dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_gravity=""-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_marginLeft="10dp"/>-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/quantity_accept"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@mipmap/but_or"
        android:layout_marginTop="40dp"
        android:text="Принять"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/quantity_cancel"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:layout_marginTop="5dp"
        android:text="Отмена"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlueToolbar"
        android:layout_gravity="center"/>

</LinearLayout>