<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/choose_city_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_white_1000">

    <RelativeLayout
        android:id="@+id/title_bar_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBlueToolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите ваш регион"
            android:textColor="@color/md_white_1000"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mess_city"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:layout_below="@id/title_bar_choose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:visibility="invisible">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Мы не смогли определить ваш город!\nПожалуйста выберите его из списка!"
            android:textColor="@color/colorBlueToolbar"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mess_city"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/md_orange_400"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/mycity"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Москва"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textColor="@color/md_white_1000"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:background="@mipmap/down_white_"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    <Button
        android:id="@+id/butt_ok_city"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/rl_city"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Ок"
        android:background="@color/md_green_500"/>
    <LinearLayout
        android:id="@+id/another_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_city"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_orange_100"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/city1_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_orange_400"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/city1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Москва"
                android:textSize="25dp"
                android:textColor="@color/md_white_1000"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:elegantTextHeight="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_orange_100"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/city2_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_orange_400"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/city2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Санкт-Петербург"
                android:textSize="25dp"
                android:textColor="@color/md_white_1000"
                android:textAlignment="center"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_orange_100"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/city3_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_orange_400"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/city3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Другой регион"
                android:textSize="25dp"
                android:textColor="@color/md_white_1000"
                android:textAlignment="center"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_orange_100"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/another_city"/>
</RelativeLayout>