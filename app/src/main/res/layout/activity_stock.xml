<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_color">
    <RelativeLayout
        android:id="@+id/stock_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/stock_button_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_menu_black_36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"/>
         <TextView
            android:id="@+id/stock_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Акции"
            android:textColor="@color/md_blue_grey_800"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/line_stock"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_blue_800"
            android:alpha="0.5"
            android:layout_below="@id/stock_title"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/stock_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/txt_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/md_blue_grey_800"/>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>