<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="320dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"
              android:paddingBottom="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:clipToPadding="false">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Менеджер"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/md_grey_700"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_message"
        android:elevation="7dp">
        <TextView
            android:id="@+id/text_mess_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здравствуй мама Новй "
            android:textSize="18sp"
            android:textColor="@color/md_grey_700"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bdbfd1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_doc"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/name_file_txt"
                android:layout_width="150sp"
                android:layout_height="40dp"
                android:text="Название"
                android:textColor="@color/md_grey_700"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:background="@mipmap/ic_download"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/time_mess_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:05"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/md_black_1000"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>
</LinearLayout>