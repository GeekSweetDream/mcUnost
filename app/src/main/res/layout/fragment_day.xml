<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:clickable="true"
    android:background="@color/md_white_1000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day1"/>
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day2"/>
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day3"/>
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day4"/>
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day5"/>
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day6"/>
        <com.dreamsofpines.mcunost.ui.customView.ViewTextWithCheckbox
            android:id="@+id/day7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/day7"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>