<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include
            android:id="@+id/error_message"
            layout="@layout/view_error_message"
            android:visibility="gone"/>
    </LinearLayout>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/hotel_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicatorName="BallPulseIndicator"
        app:indicatorColor="@color/md_blue_400"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/exc_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/hotel_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/hotel_accept"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@mipmap/but_or"
                android:layout_marginTop="20dp"
                android:layout_below="@id/hotel_recycler"
                android:layout_centerHorizontal="true"
                android:text="Принять"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/hotel_cancel"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_below="@id/hotel_accept"
                android:layout_centerHorizontal="true"
                android:background="@color/transparent"
                android:layout_marginTop="20dp"
                android:text="Отмена"
                android:textSize="15dp"
                android:textColor="@color/colorBlueToolbar"
                android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>