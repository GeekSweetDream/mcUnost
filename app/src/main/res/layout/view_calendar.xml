<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_black_1000"
        android:alpha="0.3"/>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/calendar_today"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/md_blue_900">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="today"
                android:textColor="@color/md_white_1000"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/calendar_date_toolbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/calendar_today"
            android:background="@color/md_blue_800">
            <TextView
                android:id="@+id/calendar_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="month"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/calendar_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DAY"
                android:textSize="56dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/calendar_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="YEAR"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/calendar_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/calendar_date_toolbar"
            android:background="@color/md_white_1000">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/calendar_butt_ok"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:text="ok"
                    android:textColor="@color/md_blue_800"/>
                <Button
                    android:id="@+id/calendar_butt_cancel"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@id/calendar_butt_ok"
                    android:background="@color/transparent"
                    android:text="отмена"
                    android:textColor="@color/md_blue_800"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>