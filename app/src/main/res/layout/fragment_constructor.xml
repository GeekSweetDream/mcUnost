<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/md_black_1000"
        android:alpha="0.4"/>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:text="Откуда:"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textAlignment="gravity"
                            android:gravity="center"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/txt_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Выбрать"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold"
                            android:textSize="25dp"/>
                    </LinearLayout>
                </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/linear_route"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/where"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Куда"
                                android:textColor="@color/md_white_1000"
                                android:alpha="0.7"
                                android:textSize="20dp"/>
                            <TextView
                                android:id="@+id/txt_route"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Выбрать"
                                android:textColor="@color/md_white_1000"
                                android:textStyle="bold"
                                android:textSize="25dp"/>
                        </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/count"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Кол-во дней"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_day"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="1 день"
                            android:textStyle="bold"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/date"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Дата тура"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_date_from"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Выбрать"
                            android:textStyle="bold"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/txt_date_to"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="1 ребенок"
                            android:textSize="20dp"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.9"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/group"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Кто едет"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_teacher"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="1 взрослый"
                            android:textStyle="bold"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/txt_children"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="1 ребенок"
                            android:textSize="20dp"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.9"
                            android:textStyle="bold"
                            android:visibility="visible"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_hotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="false"
                    android:alpha="0.5"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/hotel"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Отель"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_hotel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Выбрать"
                            android:textStyle="bold"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/eat"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Питание"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/dinner_br"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textStyle="bold"
                            android:text="Завтрак 4"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/dinner_lu"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Обед"
                            android:textSize="20dp"
                            android:alpha="0.9"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/dinner_din"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Ужин"
                            android:textSize="20dp"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.9"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_exc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/exc"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Экскурсии"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_exc"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Выбрать"
                            android:textStyle="bold"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/tran"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Транспорт"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_bus_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Выбрать"
                            android:textColor="@color/md_white_1000"
                            android:textStyle="bold"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/txt_bus_more"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="1 доп. автобус"
                            android:textSize="20dp"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.9"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_travel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="false"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/pr"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Проезд"
                            android:textColor="@color/md_white_1000"
                            android:alpha="0.7"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/txt_travel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Поезд"
                            android:textStyle="bold"
                            android:textColor="@color/md_white_1000"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/butt_order"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/border_transparent"
                    android:text="Расчитать тур"
                    android:textSize="18dp"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <com.dreamsofpines.mcunost.ui.customView.helpers.MainHelper
            android:id="@+id/main_helper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.dreamsofpines.mcunost.ui.customView.SuccsesBookView
            android:id="@+id/succes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>