<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_color">
    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_menu_black_36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"/>
        <TextView
            android:id="@+id/title_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Направление"
            android:textStyle="bold"
            android:textColor="@color/md_grey_800"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/line_cat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_blue_800"
            android:layout_below="@id/title_tour"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_below="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include
        android:id="@+id/view_choose_city"
        layout="@layout/view_choose_city"
        android:visibility="invisible"/>
</RelativeLayout>