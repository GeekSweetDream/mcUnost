<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white_1000">
    <RelativeLayout
        android:id="@+id/item_order"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:elevation="3dp">
        <TextView
            android:id="@+id/title_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название"
            android:textStyle="bold"
            android:textColor="@color/colorBlueToolbar"
            android:alpha="0.5"
            android:layout_alignParentLeft="true"
            android:textSize="22dp"/>
        <LinearLayout
            android:id="@+id/lin_ord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_below="@id/title_my_order">
            <TextView
                android:id="@+id/num_txt_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="№ Заказа:"
                android:textColor="@color/colorBlueToolbar"
                android:alpha="0.5"
                android:textStyle="bold"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/num_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="123"
                android:textColor="@color/colorBlueToolbar"
                android:textSize="13dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/date_txt_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Дата:"
                android:alpha="0.5"
                android:textStyle="bold"
                android:textColor="@color/colorBlueToolbar"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/date_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_txt_my_order"
                android:layout_marginLeft="4dp"
                android:text="24 авг.2017"
                android:textColor="@color/colorBlueToolbar"
                android:textStyle="bold"
                android:textSize="13dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/lin_ord">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус заказа: "
                    android:textSize="13dp"
                    android:alpha="0.5"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"/>
                <TextView
                    android:id="@+id/status_ord_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:text="В обработке"
                    android:textStyle="bold"
                    android:textColor="@color/md_orange_400"
                    android:textSize="13dp"/>
            </LinearLayout>
        <TextView
            android:id="@+id/cost_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="500Р"
            android:textSize="32dp"
            android:textStyle="bold"
            android:alpha="0.8"
            android:textColor="@color/colorBlueToolbar"/>
        <Button
            android:id="@+id/butt_read_more"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:text="Подробнее"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:background="@color/md_orange_400"
            android:elevation="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/cost_my_order"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_order"
        android:background="@color/colorBlueToolbar"
        android:alpha="0.5"
        android:layout_marginBottom="2dp"/>

</RelativeLayout>