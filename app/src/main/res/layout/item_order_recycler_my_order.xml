<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white_1000">
    <RelativeLayout
        android:id="@+id/item_order"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="3dp">
        <ImageView
            android:id="@+id/img_ch_my_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border"/>
        <RelativeLayout
            android:id="@+id/title_bar_my_order"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/img_my_order"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@color/md_orange_400"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/title_my_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Название"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"
                android:textAlignment="center"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/info_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/title_bar_my_order"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/date_txt_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата поездки:"
                android:textColor="@color/colorBlueToolbar"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/date_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_txt_my_order"
                android:text="24 авг.2017 - 25 авг. 2017"
                android:textColor="@color/colorBlueToolbar"
                android:textSize="16dp"/>
            <LinearLayout
                android:id="@+id/cost_ll_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/date_my_order">
                <TextView
                    android:id="@+id/cost_txt_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цена: "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"/>
                <TextView
                    android:id="@+id/cost_my_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500 "
                    android:textSize="16dp"
                    android:textColor="@color/colorBlueToolbar"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cost_ll_my_order">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статус заказа: "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"/>
                <TextView
                    android:id="@+id/status_ord_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:text="В обработке"
                    android:textColor="@color/md_orange_400"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/butt_read_more"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Подробнее"
            android:textSize="15dp"
            android:textColor="@color/colorBlueToolbar"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/info_my_order"/>
    </RelativeLayout>

</RelativeLayout>