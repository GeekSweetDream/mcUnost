<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/choose_city_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_white_1000">

    <RelativeLayout
        android:id="@+id/title_bar_choose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBlueToolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите ваш регион"
            android:textColor="@color/md_white_1000"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="20dp"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_choose">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mess_city"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Мы не смогли определить ваш город!\nПожалуйста выберите его из списка!"
                android:textColor="@color/colorBlueToolbar"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_city"
                android:theme="@style/MyColorGreyHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mess_city"
                android:focusableInTouchMode="true">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_city_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Введите ваш город"
                    android:textColor="@color/md_black_1000"/>
            </android.support.design.widget.TextInputLayout>
            <ListView
                android:id="@+id/list_city"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/input_city">
            </ListView>
            <Button
                android:id="@+id/butt_ok_city"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_below="@id/list_city"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:text="Ок"
                android:background="@color/md_green_500"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/another_city"/>
</RelativeLayout>