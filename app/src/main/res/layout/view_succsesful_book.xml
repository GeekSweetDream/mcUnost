<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_black_1000"
        android:alpha="0.5"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/success_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicatorName="BallPulseIndicator"
        app:indicatorColor="@color/md_blue_400"/>
    <RelativeLayout
        android:id="@+id/rl_anim_succsesful"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/md_white_1000"
        android:visibility="gone">
        <ImageView
            android:id="@+id/icon_succsesful"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/galka"/>
        <TextView
            android:id="@+id/txt_succsesful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_succsesful"
            android:text="Ваш тур поступил в разработку!"
            android:textColor="@color/colorBlueToolbar"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>