<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_main_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/md_blue_400"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_black_1000"
        android:alpha="0.4"/>
    <Button
        android:id="@+id/rel_main_logo"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:text="Сконструировать тур"
        android:textStyle="bold"
        android:textColor="@color/md_orange_400"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Приветствуем путешественников!\nНаше приложение предназначено для учителей и их учеников.\nВ нем вы сможете самостоятельно сконструировать тур для вашей группы!"
        android:textColor="@color/md_white_1000"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>