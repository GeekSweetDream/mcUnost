<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:layout_centerInParent="true"
        android:background="@color/md_white_1000">
        <RelativeLayout
            android:id="@+id/title_bar_info_order"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorBlueToolbar">
            <TextView
                android:id="@+id/title_txt_info_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Название"
                android:textAlignment="center"
                android:textColor="@color/md_white_1000"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/status_rl_info_order"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/title_bar_info_order">
            <TextView
                android:id="@+id/status_info_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="В обработке"
                android:textColor="@color/colorBlueToolbar"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/status_info_order"
                android:background="@color/colorBlueToolbar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/info_txt_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_rl_info_order"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/number_ord_txt_info_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="№ заказа:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/number_ord_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="16dp"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/date_txt_info_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Даты:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/date_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="16dp"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/cost_txt_info_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цена:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/cost_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"
                    android:text="2132"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/quantity_sc_txt_info_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Школьников:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/quantity_sc_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"
                    android:text="2132"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/quantity_tc_txt_info_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Преподавателей:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/quantity_tc_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"
                    android:text="2132"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlueToolbar"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Менеджер:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/manager_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"
                    android:text="Неизвестно"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тел.:"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/phone_info_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorBlueToolbar"
                    android:textSize="20dp"
                    android:text="Неизвестно"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/butt_chat_info_order"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="Чат с менеджером"
            android:background="@color/md_orange_400"
            android:layout_below="@id/info_txt_order"
            android:layout_marginTop="13dp"/>
        <Button
            android:id="@+id/butt_close_info_order"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:layout_below="@id/butt_chat_info_order"
            android:layout_centerHorizontal="true"
            android:text="Закрыть"
            android:textColor="@color/colorBlueToolbar"/>
    </RelativeLayout>
</RelativeLayout>