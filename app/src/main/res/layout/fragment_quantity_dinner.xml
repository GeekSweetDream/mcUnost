<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/md_white_1000"
              android:clickable="true"
              android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Завтрак"
                android:textColor="@color/colorBlueToolbar"
                android:textStyle="bold"
                android:alpha="0.5"
                android:textSize="23dp"
                android:gravity="center"/>
            <com.dreamsofpines.mcunost.ui.customView.SimpleCounter
                android:id="@+id/stepperTouchBreakfast"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Обед"
                android:textColor="@color/colorBlueToolbar"
                android:textStyle="bold"
                android:alpha="0.5"
                android:textSize="23dp"
                android:gravity="center"/>
            <com.dreamsofpines.mcunost.ui.customView.SimpleCounter
                android:id="@+id/stepperTouchLunch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ужин"
                android:textColor="@color/colorBlueToolbar"
                android:textStyle="bold"
                android:textSize="23dp"
                android:alpha="0.5"
                android:gravity="center"/>
            <com.dreamsofpines.mcunost.ui.customView.SimpleCounter
                android:id="@+id/stepperTouchDinner"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <!--<nl.dionsegijn.steppertouch.StepperTouch-->
                <!--android:id="@+id/stepperTouchDinner"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_gravity=""-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--app:stepperBackgroundColor="@color/colorBlueToolbar"/>-->
        </LinearLayout>
        <Button
            android:id="@+id/quantity_dinner_accept"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@mipmap/but_or"
            android:layout_marginTop="40dp"
            android:text="Принять"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/quantity_dinner_cancel"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@color/transparent"
            android:layout_marginTop="5dp"
            android:text="Отмена"
            android:textSize="15dp"
            android:textColor="@color/colorBlueToolbar"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>
    <com.dreamsofpines.mcunost.ui.customView.helpers.DinHelper
        android:id="@+id/din_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>