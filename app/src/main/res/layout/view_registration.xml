<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_black_1000"
        android:alpha="0.5"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@color/md_white_1000">
        <TextView
            android:id="@+id/txt_registr"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_blue_grey_600"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="Для заказа нужно авторизоваться!\nEсли вы не регистрировались, то сделайте это!"/>
        <Button
            android:id="@+id/butt_autoriz"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@id/txt_registr"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBlueToolbar"
            android:text="Авторизоваться"/>
        <Button
            android:id="@+id/butt_registr"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@id/butt_autoriz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/colorBlueToolbar"
            android:text="Зарегистрироваться"/>

    </RelativeLayout>

</RelativeLayout>