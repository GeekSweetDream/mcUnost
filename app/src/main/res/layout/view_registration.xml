<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@color/md_white_1000">
        <RelativeLayout
            android:id="@+id/title_auth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorBlueToolbar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Авторизация"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/md_white_1000"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/auth_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_auth"
            android:visibility="invisible">
            <include
                android:id="@+id/view_reg_auth"
                layout="@layout/view_auth"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/view_reg_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <TextView
                android:id="@+id/txt_registr"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/md_blue_grey_600"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:text="Для заказа нужно авторизоваться!\nEсли вы не регистрировались, то сделайте это!"/>
            <Button
                android:id="@+id/butt_autoriz"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_below="@id/txt_registr"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@color/md_blue_600"
                android:text="Авторизоваться"
                android:textColor="@color/md_white_1000"/>
            <Button
                android:id="@+id/butt_registr"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_below="@id/butt_autoriz"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@color/md_blue_600"
                android:text="Зарегистрироваться"
                android:textColor="@color/md_white_1000"/>
            <Button
                android:id="@+id/butt_registr_cancel"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_below="@id/butt_registr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:text="отменить"
                android:textSize="15dp"
                android:textColor="@color/colorBlueToolbar"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>