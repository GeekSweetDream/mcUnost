<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_black_1000"
        android:alpha="0.5"/>

    <RelativeLayout
        android:id="@+id/rl_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/md_black_1000"
            android:alpha="0.7"/>
        <TextView
            android:id="@+id/txt_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваш город:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/md_white_1000"/>
        <TextView
            android:id="@+id/mycity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Москва"
            android:layout_toRightOf="@id/txt_city"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:textColor="@color/md_white_1000"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:background="@mipmap/down_white_"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mess_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_city"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:visibility="invisible">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@color/md_black_1000"/>
         <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Мы не смогли определить ваш город!\nПожалуйста выберите его из списка!"
            android:textColor="@color/md_white_1000"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/butt_ok_city"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/rl_city"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Ок"
        android:background="@color/md_green_500"/>
    <RelativeLayout
        android:id="@+id/another_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_city"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/md_black_1000"
            android:alpha="0.9"/>
        <TextView
            android:id="@+id/city1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Москва"
            android:textSize="22dp"
            android:textColor="@color/md_white_1000"
            android:textAlignment="center"
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/city2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Санкт-Петербург"
            android:textSize="22dp"
            android:textColor="@color/md_white_1000"
            android:layout_below="@id/city1"
            android:textAlignment="center"
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/city3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Другой регион"
            android:textSize="22dp"
            android:textColor="@color/md_white_1000"
            android:textAlignment="center"
            android:layout_below="@id/city2"
            android:elegantTextHeight="true"/>
    </RelativeLayout>

</RelativeLayout>